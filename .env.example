# MACS Multichain Wallet Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS
# =============================================================================

# Polygon Network RPC URL
# Get from: Infura, Alchemy, QuickNode, or public endpoints
VITE_POLYGON_RPC_URL=https://polygon-rpc.com

# Solana Network RPC URL  
# Use Solana Labs public RPC or custom endpoint
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# =============================================================================
# BRIDGE CONFIGURATION
# =============================================================================

# Wormhole Bridge Contract Address (Polygon)
VITE_WORMHOLE_BRIDGE_ADDRESS=0x3ee18B2214AFF97000D974cf647E7C347E8fa585

# Bridge Fee Recipient Address
VITE_BRIDGE_FEE_RECIPIENT=0x742d35Cc6634C0532925a3b8D4C9db96590c4C87

# Minimum Bridge Amount (in MACS tokens)
VITE_MIN_BRIDGE_AMOUNT=1

# Maximum Bridge Amount (in MACS tokens)  
VITE_MAX_BRIDGE_AMOUNT=10000

# =============================================================================
# TOKEN CONTRACT ADDRESSES
# =============================================================================

# MACS Token Contract Address (Polygon)
VITE_MACS_TOKEN_POLYGON=0x...

# MACS Token Program ID (Solana)
VITE_MACS_TOKEN_SOLANA=...

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Price Data API (CoinGecko, CoinMarketCap, etc.)
VITE_PRICE_API_URL=https://api.coingecko.com/api/v3

# MACS Token ID for price tracking
VITE_MACS_TOKEN_ID=macs-token

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics ID (optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=https://...@sentry.io/...

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Polygon Chain ID (137 for mainnet, 80001 for Mumbai testnet)
VITE_POLYGON_CHAIN_ID=137

# Solana Cluster (mainnet-beta, devnet, testnet)
VITE_SOLANA_CLUSTER=mainnet-beta

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable bridge functionality
VITE_ENABLE_BRIDGE=true

# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=true

# Enable/disable dark mode
VITE_ENABLE_DARK_MODE=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode (true for development, false for production)
VITE_DEV_MODE=false

# Enable debug logging
VITE_DEBUG_LOGGING=false

# Mock wallet connections for testing
VITE_MOCK_WALLETS=false

